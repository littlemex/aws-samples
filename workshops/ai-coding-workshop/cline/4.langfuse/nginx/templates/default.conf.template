# 基本設定
server {
    listen 80;
    server_name localhost;
    
    # アクセスログとエラーログの設定
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    
    # 共通のヘッダー設定
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    
    # WebSocketサポート
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # タイムアウト設定
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;
    
    # バッファサイズ
    proxy_buffer_size 128k;
    proxy_buffers 4 256k;
    proxy_busy_buffers_size 256k;
    
    # 最大リクエストサイズ
    client_max_body_size 50M;
    
    # LiteLLM Proxy (常に/apiパス)
    location /api/ {
        proxy_pass http://4langfuse-litellm-1:4000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Langfuse Web 静的ファイル
    location /_next/ {
        proxy_pass http://langfuse-langfuse-web-1:3000/_next/;
        proxy_cache_bypass $http_upgrade;
    }

    # ルートパス - Langfuseまたはcode-serverにプロキシ
    location / {
        # 共通のプロキシ設定
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # 静的ファイルのパス修正（Langfuse用）
        sub_filter '/_next/' '${LANGFUSE_PATH_PREFIX}/_next/';
        sub_filter_once off;
        sub_filter_types text/css text/javascript application/javascript;

        ${ROOT_LOCATION}
    }
}
